<% include partials/header %>
<div class="row">
    <h3>Edit Idea</h3>
    <form action="/editIdea/<%=idea._id%>?_method=PUT" method="POST" class="col s12">
        <div class="row">
            <div class="input-field col s12">
                <input value="<%=idea.title%>" placeholder="Title" id="title" type="text" name="title" class="validate">
                <label for="title">Add Title</label>
            </div>
            <div class="input-field col s12">
                <input value="<%=idea.description%>" id="description" placeholder="Description" type="text" name="description" class="validate">
                <label for="description">Add Description</label>
            </div>
        </div>
        <button class="btn waves-effect waves-light" type="submit" name="action">Update
            <i class="material-icons right ">send</i>
        </button>
    </form>
</div>
<% include partials/footer %>