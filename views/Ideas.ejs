<% include partials/header %>
<div class="row">
<% ideas.map(function(idea){%>
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"><%=idea.title%></span>
          <p><%=idea.description%></p>
        </div>
        <div class="card-action">
                <a class="waves-effect waves-delete btn" href="/editForm/<%=idea._id%>"><i class="material-icons left">edit</i>Edit</a>
                <a class="waves-effect waves-danger btn" href="/deleteIdea/<%=idea._id%>"><i class="material-icons left">delete</i>Delete</a>
        </div>
      </div>
    </div>
<%})%>
  </div>
            
<% include partials/footer %>